<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue_black_gradient"
    android:padding="16dp">

    <TextView
        android:id="@+id/enter_pin_tv"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_pin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <View
        android:id="@+id/mura_line"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:background="@drawable/white_circle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enter_pin_tv"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="14dp"/>

    <LinearLayout
        android:id="@+id/ovals_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mura_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <View
            android:id="@+id/oval_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_oval_stroke"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <View
            android:id="@+id/oval_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_oval_stroke"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <View
            android:id="@+id/oval_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_oval_stroke"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <View
            android:id="@+id/oval_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_oval_stroke"/>

        <Space
            android:layout_width="16dp"
            android:layout_height="0dp"/>

        <View
            android:id="@+id/oval_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/white_oval_stroke"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ovals_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintDimensionRatio="5:4"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pin_btn_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="1"/>

                <Button
                    android:id="@+id/pin_btn_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="2"/>

                <Button
                    android:id="@+id/pin_btn_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pin_btn_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="4"/>

                <Button
                    android:id="@+id/pin_btn_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="5"/>

                <Button
                    android:id="@+id/pin_btn_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pin_btn_7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="7"/>

                <Button
                    android:id="@+id/pin_btn_8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="8"/>

                <Button
                    android:id="@+id/pin_btn_9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clear_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="C"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/pin_btn_0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="0"/>

                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/light_blue_100"
                    android:text="ОК"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>